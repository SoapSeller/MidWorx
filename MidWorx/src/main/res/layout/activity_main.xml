<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        android:background="#f2f2f2">
<!--
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            android:src="@drawable/background"/>-->

    <TextView
            android:id="@+id/score_txt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="26dp"
            android:background="#f2c230"
            android:textColor="#ffff"
            android:gravity="center"
            android:text="0" />


    <TextView
            android:id="@+id/time_txt"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="26dp"
            android:background="#f2c230"
            android:textColor="#ffff"
            android:text="time" />


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/time_txt"
            android:layout_toRightOf="@+id/score_txt"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#9000"
            android:src="@drawable/logo"
            android:text="notifications" />

    <FrameLayout
            android:id="@+id/letters_organizer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/guess_btn"
            android:background="#30f0">

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >
            <TableLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    >
                <TableRow
                        android:id="@+id/selected_letters"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                    >
                    <Button
                            android:id="@+id/selected_letters__button_1"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selected_letters__button_2"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selected_letters__button_3"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selected_letters__button_4"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selected_letters__button_5"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selected_letters__button_6"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    </TableRow>
                <TableRow
                        android:id="@+id/selectable_letters"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        >
                    <Button
                            android:id="@+id/selectable_letters__button_1"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selectable_letters__button_2"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selectable_letters__button_3"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selectable_letters__button_4"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selectable_letters__button_5"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                    <Button
                            android:id="@+id/selectable_letters__button_6"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/PrettyButton"
                            android:background="@drawable/green_button"
                            />
                        </TableRow>
            </TableLayout>
        </LinearLayout>

            </FrameLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff25749"
            android:text="@string/guess"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="24dp"
            android:padding="16dp"
            android:id="@+id/guess_btn" />

    <com.fun.midworx.com.fun.midworx.views.BoxesContainer
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/words_boxes_layout"
            android:layout_above="@+id/letters_organizer"
            android:layout_below="@+id/score_txt" />

</RelativeLayout>